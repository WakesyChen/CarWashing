<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="资讯"
        android:textColor="#000"
        android:textSize="20sp" />
    <!--Tab导航栏-->

    <ScrollView
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <!--第一个标签-->
            <LinearLayout
                android:id="@+id/layoutId_commend"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/tv_01"
                    android:textColor="@color/theme_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/underline_1"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="8dp"

                    android:background="@color/theme_red" />

            </LinearLayout>

            <!--第二个标签-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/layoutId_carAbout"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:textColor="#000"
                    android:id="@+id/tv_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="汽车百科"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/underline_2"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="8dp"
                    />

            </LinearLayout>
            <!--第三个标签-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/layoutId_carNeeds"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:textColor="#000"
                    android:id="@+id/tv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="必备车品"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/underline_3"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="8dp"
                    />

            </LinearLayout>
            <!--第三个标签-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/layoutId_driveSkill"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:textColor="#000"
                    android:id="@+id/tv_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="驾驶技巧"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/underline_4"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="8dp"
                    />

            </LinearLayout>




        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

    </FrameLayout>


</LinearLayout>
